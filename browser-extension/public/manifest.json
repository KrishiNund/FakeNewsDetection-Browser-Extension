{
    "manifest_version": 3,
    "name": "LetMeCheck",
    "version": "1.0.0",
    "description": "An extension that detects fake news on Facebook posts as part of my final year project.",
    "action": {
        "default_popup": "index.html"
    },
    "permissions":[
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions":[
        "https://www.facebook.com/*"
    ],
    "icons":{
        "32":"icon32.png",
        "96":"icon96.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts":[
        {
            "matches":["https://www.facebook.com/*"],
            "js":["content.js"],
            "css":["index.css"],
            "run_at": "document_idle"
        }
    ]
}